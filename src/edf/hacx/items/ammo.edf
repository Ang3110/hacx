thingtype HacxRounds : Mobj, 2007
{
  flags SPECIAL

  pickupeffect
  {
    effects HacxRounds
    message "$GOTROUNDS"
    sound   itemup
  }

  states
  @"
  Spawn:
    ROUN A -1
