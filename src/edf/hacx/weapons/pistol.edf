/**
 * HacX 2.0 - EDF
 *
 * Weapon: Pistol
 */

weaponinfo HacxPistol : Weapon
{
  ammotype AmmoClip
  ammouse  2
  upsound  "weapons/pistolup"
  selectionorder 8.0

  flags        SILENCEABLE|DISABLEAPS|HAPTICRECOIL|AUTOSWITCHFROM
  mod          HacxPistol
  hapticrecoil 1
  haptictime   1

  states
  @"
  Ready:
    PISG A 1 A_WeaponReady()
    Loop
  Deselect:
    PISG A 0 A_Lower()
    PISG A 1 A_Lower()
    Loop
  Select:
    PISG A 0 A_Raise()
    PISG A 1 A_Raise()
    Loop
  Fire:
    PISG B 5 A_FireCustomBullets(pistol, custom, 2, 5, 3, Flash, 2, 0)
    PISG CA 3
    PISG A 4 A_ReFire()
    Goto Ready
  Flash:
    PISF A 3 bright A_Light2()
    Goto LightDone
  AltFire:
    PISK A 3 A_PlaySoundEx("weapons/grunt", chan_weapon)
    PISK B 3
    PISK C 8 A_CustomPlayerMelee(4, 10, 10, punch, "weapons/kick", 96)
    PISK B 3
    PISK A 3
    PISK A 0 A_ReFire()
    goto Ready
  "@
}
