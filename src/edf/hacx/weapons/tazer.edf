/**
 * HacX 2.0 - EDF
 *
 * Weapon: Tazer
 */

weaponinfo HacxTazer : HacxWeapon
{
  ammotype       AmmoShell
  ammouse        1
  upsound        "weapons/tazerup"
  selectionorder 4.0

  flags        SILENCEABLE|DISABLEAPS|HAPTICRECOIL
  mod          HacxTazer
  hapticrecoil 3
  haptictime   3

  // TODO: proper behavior (special attack!)

  states
  @"
  Ready:
    TAZG A 1 A_WeaponReady()
    loop
  Deselect:
    TAZG A 0 A_Lower()
    TAZG A 1 A_Lower()
    loop
  Select:
    TAZG A 0 A_Raise()
    TAZG A 1 A_Raise()
    loop
  Fire:
    TAZG B 0 A_PlaySoundEx("weapons/tazercharge", voice)
    TAZG A 3 A_GunFlash()
    TAZF A 3 bright A_FireCustomBullets("weapons/tazer", never, 8, 5, 3, -1)
    TAZF B 2 bright
    TAZG C 2
    TAZG D 3
    TAZG E 5
    TAZG D 4
    TAZG C 3
    TAZG A 4
    TAZG A 1 A_ReFire()
    goto Ready
  Flash:
    TAZC A 2 bright
    TAZC B 2 bright A_Light1()
    TAZC C 2 bright A_Light2()
    TNT1 A 2
    TNT1 A 0 A_Light0()
    stop
  AltFire:
    TAZK A 3 A_PlaySoundEx("weapons/grunt", weapon)
    TAZK B 3
    TAZK C 8 A_CustomPlayerMelee(4, 10, 10, punch, "weapons/kick", 96)
    TAZK B 3
    TAZK A 3
    TAZK A 0 A_ReFire()
    goto Ready
  "@
}

weapongiver HacxTazerGiver
{
  weapon HacxTazer
  ammogiven AmmoShell, 8, 4, 20, 8
}

thingtype HacxTazerPickup : Mobj, 2001
{
  flags SPECIAL
  acs_spawndata
  {
    num   27
    modes doom
  }

  pickupeffect
  {
    effects HacxTazerGiver
    message "$GOTTAZER"
    sound   wpnup
  }

  states
  @"
  Spawn:
    TAZR A -1
    stop
  "@
}
